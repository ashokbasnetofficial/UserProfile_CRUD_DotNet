   @model List<Products>
 <div  class="text-black">
        <h3 class="border-bottom mt-5">ALL PRODUCTS</h3>
    </div>
<div class="row mt-3">
    @foreach(var product in Model)
    {
        <div class="col-md-3 col-sm-6">
            <div class="product-grid">
                <div class="product-image">
                    <a href="#" class="image">
                        <img class="pic-1" src="@product.ImageURl">
                    </a>
                    <ul class="product-links">
                        <li><a href="#" data-tip="Add to Wishlist"><i class="bi bi-heart-fill"></i></a></li>
                        <li><a href="#" data-tip="Compare"><i class="bi bi-shuffle"></i></a></li>
                        <li><a href="#" data-tip="Quick View"><i class="bi bi-search"></i></a></li>
                    </ul>
                </div>
                <div class="product-content">
                    <ul class="rating">
                        <li class="bi bi-star-fill"></li>
                        <li class="bi bi-star-fill"></li>
                        <li class="bi bi-star-fill"></li>
                        <li class="bi bi-star-fill"></li>
                        <li class="bi bi-star-fill"></li>
                    </ul>
                    <h3 class="title"><a href="#">@product.Name</a></h3>
                    <div class="price">Rs.@product.Price</div>
                    <a class="add-to-cart" href="#">add to cart</a>
                </div>
            </div>
        </div>
    }
</div>




