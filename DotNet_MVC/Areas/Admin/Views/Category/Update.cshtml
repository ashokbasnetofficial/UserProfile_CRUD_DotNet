@model Category;
<form method="post">
    <fieldset>
        <legend class="border-bottom">Update Product</legend>
        <div class="form-group">
            <label for="exampleInputPassword1" class="form-label mt-4"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name"></span>

        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label mt-4"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Product Description..." id="exampleTextarea" rows="3"></textarea>
            <span asp-validation-for="Description"></span>

        </div>
        <div class="form-group">
            <label asp-for="Price" class="form-label mt-4">Email Address</label>
            <input asp-for="Price" type="number" class="form-control" id="email" placeholder="Email Address">
            <span asp-validation-for="Price"></span>
        </div>

    </fieldset>
    <div class="d-flex align-items-center justify-content-start">
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary  mt-5 mx-3"> <i class="bi bi-arrow-left-short"></i> Back</a>
        <button type="submit" class="btn btn-primary mt-5">Update</button>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}